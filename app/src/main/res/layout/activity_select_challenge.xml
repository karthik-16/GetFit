<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SelectChallenge"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    >


    <LinearLayout
        android:id="@+id/llChallengeDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="200dp"

            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            app:cardCornerRadius="20dp"
            >
            <ImageView
                android:id="@+id/i1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:src="@drawable/push_ups"

                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginStart="10dp"
            >
            <TextView
                android:id="@+id/t1name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max in 30s"
                android:textColor="#000000"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/t1time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(30s)"
                android:textColor="#000000"
                android:textSize="24dp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llRankingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llChallengeDetails"

        android:layout_marginTop="48dp"
        android:layout_marginStart="20dp"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Ranking"
            android:textColor="#000000"
            android:textSize="24sp"

            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"
            android:layout_marginStart="7dp"
            app:srcCompat="@drawable/info" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRankYou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llRankingText"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"

        app:cardCornerRadius="15dp"
        android:padding="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"

            android:orientation="horizontal"
            android:background="@android:color/white"
            >
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/ivRankMeProfileImage"
                android:layout_width="55dp"
                android:layout_height="match_parent"

                android:layout_marginStart="10dp"

                android:src="@drawable/user"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_weight="2"
                android:background="@android:color/white"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="3."
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="You"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvRankMeChallengeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="30s Push Ups"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvRankMePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginEnd="10dp"

                android:text="24"
                android:textSize="40sp"

                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRankFireStoreList"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnUpload"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/cvRankYou" />
    <Button
        android:id="@+id/btnUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvRankFireStoreList"

        android:layout_marginBottom="10dp"

        android:text="Upload"
        android:textColor="@android:color/black"
        />


</androidx.constraintlayout.widget.ConstraintLayout>