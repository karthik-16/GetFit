<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PurchasingReward">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/btnPurchase"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="60dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/ivRewardImagePurchasePage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"

                android:src="@drawable/push_ups"
                />
            <TextView
                android:id="@+id/tvRewardTitlePurchasePage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"

                android:text="Reward Title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/tvRewardDescPurchasePage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"

                android:text="Reward Desc"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnPurchase"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"

        android:text="PURCHASE"
        />
</androidx.constraintlayout.widget.ConstraintLayout>